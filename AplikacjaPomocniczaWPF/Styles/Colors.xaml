<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AplikacjaPomocniczaWPF.Styles">
    <Color x:Key="BasicForegroud" R="0" G="0" B="0" />
    <Color x:Key="BasicBackground" R="255" G="255" B="255" />

    <SolidColorBrush x:Key="BasicForegroundBrush" Color="{StaticResource BasicForegroud}" />
    <SolidColorBrush x:Key="BasicBackgroundBrush" Color="{StaticResource BasicBackground}" />
</ResourceDictionary>